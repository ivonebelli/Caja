{
  "name": "caja-registradora",
  "version": "1.0.0",
  "description": "Sistema de Caja Registradora con integraci√≥n de Fotocabinas",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "build": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "init-data": "node init-data.js"
  },
  "keywords": [
    "electron",
    "caja",
    "pos",
    "fotocabina"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-pos-printer": "^1.3.8",
    "express": "^4.21.2",
    "mysql2": "^3.15.3",
    "qrcode": "^1.5.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.cajaregistradora.app",
    "productName": "CajaRegistradora",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "server.js",
      "init-data.js",
      "build-instructions.md",
      "instructions.txt",
      "package.json",
      "src/create-local.html",
      "src/create-profile.html",
      "src/edit-profile.html",
      "src/index.html",
      "src/locales.html",
      "src/login.html",
      "src/main.js",
      "src/network-config.html",
      "src/profiles.html",
      "src/profiles.json",
      "src/server.js",
      "src/admin/index.html",
      "src/admin/productos.html",
      "src/admin/reportes.html",
      "src/cajero/caja.html",
      "src/cajero/index.html",
      "src/cajero/ordenes.html",
      "src/cajero/venta.html",
      "src/gerencia/index.html",
      "src/gerencia/perfiles.html",
      "src/shared/network-config.js",
      "src/shared/styles.css",
      "src/shared/utils.js",
      "src/shared/xlsx.full.min.js",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "reportes",
        "to": "reportes",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Caja Registradora",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "asar": false
  }
}
